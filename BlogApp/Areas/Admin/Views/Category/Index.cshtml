@using BlogApp.Controllers.Admin
@model List<Category>
@{
    Layout = "_Layout";
}

<div class="container mt-3">
    <a asp-action="CreateOrUpdate" asp-controller="Category" asp-area="Admin" asp-route-type="@ViewType.Create">Add new record</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Definition</th>
                <th>SeoUrl</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Definition</td>
                        <td>@category.SeoUrl</td>
                        <td>
                            <a asp-action="CreateOrUpdate" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id" asp-route-type="@ViewType.Update">Update</a>
                            <a>Remove</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Herhangi bir kayıt bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>