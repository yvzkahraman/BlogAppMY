@using BlogApp.Models
@model BlogCreateModel
@{
    Layout = "_Layout";
}



<div class="container mt-3">
    <form asp-action="Create" asp-controller="Blog" asp-area="Admin" method="post">
       
        <div class="mb-3">
            <label for="Title">Başlık :</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Title">Kısa Açıklama :</label>
            <input type="text" asp-for="ShortDescription" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Title"> Açıklama :</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="Title">Resim:</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>

        @{
            if (ViewBag.ErrorMessage != null)
            {
                <div class="text-center text-danger lead mb-3">
                    @ViewBag.ErrorMessage
                </div>
            }
        }


        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>