@using BlogApp.Controllers.Admin
@model List<BlogApp.Models.AssignCategoryListModel>
@{
    Layout = "_Layout";
}
 <div class="container mt-3">
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Kategori Ataması Yapacağınız Blog Bilgileri
                </div>
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.SelectedBlog.Title</h5>
                    <p class="card-text">@ViewBag.SelectedBlog.ShortDescription</p>
                   
                </div>
            </div>
        </div>
        <div class="col-8">
            <form>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="mb-2">
                        <input type="hidden" asp-for="@Model[i].BlogId" />
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="@Model[i].Id" asp-for="@Model[i].Exist" checked="@Model[i].Exist">
                            <label class="form-check-label" for="@Model[i].Id">
                                @Model[i].Definition
                            </label>
                        </div>
                    </div>
                }
                <div class="mb-2">
                    <button class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
